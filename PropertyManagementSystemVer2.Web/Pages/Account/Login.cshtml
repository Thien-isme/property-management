    <title>PropertyMS - @ViewData["Title"]</title>
    <!-- CSS t·ª´ UI -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .login-wrapper {
            min-height: 100vh;
            background: var(--bg-primary);
            display: flex;
