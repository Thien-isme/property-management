@page
@model PropertyManagementSystemVer2.Web.Pages.Landlord.PaymentsModel
@{
    ViewData["Title"] = "Quản lý Thanh toán";
}

<div class="mb-20">
    <div class="page-title">Quản lý Thanh toán</div>
    <div class="page-desc">Theo dõi các khoản thu tiền thuê nhà và phí khác</div>
</div>

<div class="card mb-20">
    <div class="filter-bar" style="margin-bottom: 0;">
        <div class="header-search" style="flex: 1; min-width: 200px;">
            <i data-feather="search" style="color: var(--text-muted); width: 14px;"></i>
            <input placeholder="Tìm mã hợp đồng, tên người thuê..." style="width: 100%;" />
        </div>
        <button class="btn btn-primary btn-sm">Tất cả</button>
        <button class="btn btn-ghost btn-sm text-yellow" style="border-color: var(--warning);">Chờ xác nhận</button>
        <button class="btn btn-ghost btn-sm text-red" style="border-color: var(--danger);">Quá hạn</button>
        <button class="btn btn-ghost btn-sm text-green" style="border-color: var(--success);">Đã thu</button>
    </div>
</div>

<div class="card">
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Mã tham chiếu</th>
                    <th>Nội dung</th>
                    <th>Người nộp</th>
                    <th>Ngày đến hạn</th>
                    <th>Số tiền (VND)</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Payments != null && Model.Payments.Any())
                {
                    foreach (var payment in Model.Payments)
                    {
                        <tr>
                            <td>
                                <div class="fw-700">#@payment.Id</div>
                                <div style="font-size: 11px; color: var(--text-muted);">HĐ: @payment.LeaseNumber</div>
                            </td>
                            <td>
                                <div class="fw-600">@payment.Description</div>
                                <div style="font-size: 11px; color: var(--text-muted);">Tháng: @payment.BillingMonth/@payment.BillingYear</div>
                            </td>
                            <td>
                                <div>@payment.TenantName</div>
                            </td>
                            <td>
                                <div class="@(payment.DueDate < DateTime.Now && payment.Status.ToString() != "Paid" ? "text-red fw-600" : "")">
                                    @payment.DueDate.ToString("dd/MM/yyyy")
                                </div>
                            </td>
                            <td class="text-green fw-700">@payment.Amount.ToString("N0")</td>
                            <td>
                                @if (payment.Status.ToString() == "Pending")
                                {
                                    <span class="badge badge-warning">Chờ đóng</span>
                                }
                                else if (payment.Status.ToString() == "Processing")
                                {
                                    <span class="badge badge-info">Đang xử lý</span>
                                }
                                else if (payment.Status.ToString() == "Paid")
                                {
                                    <span class="badge badge-success">Đã thu</span>
                                }
                                else if (payment.Status.ToString() == "Overdue")
                                {
                                    <span class="badge badge-danger">Quá hạn</span>
                                }
                                else
                                {
                                    <span class="badge badge-gray">@payment.Status</span>
                                }
                            </td>
                            <td>
                                <div style="display: flex; gap: 6px;">
                                    <button class="btn btn-ghost btn-sm btn-icon" title="Xem chi tiết"><i data-feather="eye" style="width: 14px;"></i></button>
                                    @if (payment.Status.ToString() == "Processing")
                                    {
                                        <button class="btn btn-success btn-sm btn-icon" title="Xác nhận đã nhận tiền"><i data-feather="check" style="width: 14px;"></i></button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">
                            <div class="empty-state">
                                <div class="empty-icon">credit-card</div>
                                <p>Không có dữ liệu thanh toán nào thuộc quyền quản lý của bạn.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
